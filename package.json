{
  "name": "quickchars",
  "displayName": "QuickChars",
  "description": "Quick access to special characters, symbols, emojis, and code snippets through a customizable sidebar panel",
  "version": "1.0.1",
  "icon": "icon.png",
  "publisher": "ottojimb",
  "repository": {
    "type": "git",
    "url": "https://github.com/ottojimb/quickchars.git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other", "Snippets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quickCharsContainer",
          "title": "QuickChars",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "quickCharsContainer": [
        {
          "id": "quickCharsView",
          "name": "QuickChars Panel",
          "icon": "media/icon.svg",
          "type": "webview",
          "when": "config.quickChars.showInActivityBar"
        }
      ],
      "explorer": [
        {
          "id": "quickCharsViewInExplorer",
          "name": "QuickChars",
          "icon": "media/icon.svg",
          "type": "webview",
          "when": "config.quickChars.showInExplorer"
        }
      ]
    },
    "commands": [
      {
        "command": "quickChars.toggleActivityBar",
        "title": "Toggle QuickChars in Activity Bar",
        "category": "QuickChars"
      },
      {
        "command": "quickChars.toggleExplorer",
        "title": "Toggle QuickChars in Explorer",
        "category": "QuickChars"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QuickChars",
      "properties": {
        "quickChars.showInfoBanner": {
          "type": "boolean",
          "default": true,
          "description": "Show the informational banner with configuration tips"
